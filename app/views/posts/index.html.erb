<html>
<head>
<style>
</style>
<title>課題トップ</title>
<%= stylesheet_link_tag "application", :media => "all" %>
</head>


<body>
<!--テーブル部分-->
<h1>Books</h1>
<table>
	<tbody>
		<tr>
			<td><h2>Title</h2></td>
			<td><h2>Body</h2></td>
			<td></td>
			<td></td>
			<td></td>
		</tr>
	</tbody>
</table>
<% @posts.each do |post| %>
<table>
	<tbody>
		<tr>
			<td><%=post.title %></td>
			<td><%=post.body %></td>
			<td><%=link_to "Show", post_path(post) %></td>
			<td><%=link_to "Edit", edit_post_path(post) %></td>
			<td><%=link_to "Destroy",
			 post_path(post),
			  method: :delete,
			  data: { confirm: 'Are you sure?'} %></td>
		</tr>
	</tbody>
</table>
<%end%>



<h2>New book</h2>
<%= form_for :post, url: posts_path do |f| %>
 <p><label>Title</label></p>
 <p><%= f.text_field :title %></p>
 <p><label>Body</label></p>
 <p> <%= f.text_area :body %></p>
 <p><%= f.submit 'create book' %></p>
<% end %>
</body>
</html>